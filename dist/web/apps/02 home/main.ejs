<!--The header.-->
<header>
   <h1><i class="{{=app.icon}}"></i> Welcome Home, {{=$.my.name}}!</h1>
</header>

<!--App Navigation-->
<nav>
    <li>Main</li>
</nav>

<!--The main content.-->
<main>
    <div class="app">
        
        <!--Top-->
        
        <div class="home">
            <div class="userHeader">
                <!-- USER image -->
                <i class="icon fas fa-user"></i>
                <span class="usernameText">Username</span>
            </div>
    
            <div class="feedInput">
                <section>
                    <table>
                        <tbody>
                            <tr>
                                <td class="postButton">
                                    <span class="fa fa-ellipsis-h"></span>
                                </td>
                                <td>
                                    <div class="postInput">
                                        <textarea value placeholder="What's on your mind"></textarea>
                                    </div>
                                </td>
                                <td class="postButton">
                                    <span class="fa fa-chevron-right"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
            
            <div class="feedOutput">
                <section>
                    <table>
                        <tbody>
                            <tr>
                                <td class="outputUsername">
                                    <i class="icon fas fa-user"></i>
                                    <span>Username</span>
                                </td>
                                <td>
                                    <div class="">
                                        <textarea value placeholder=""></textarea>
                                    </div>
                                </td>
                                <td class="">
                                    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</main>

